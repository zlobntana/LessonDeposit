<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВРЕМЯ НАКОПЛЕНИЯ ДЕПОЗИТА"
        android:textColor="#024F5C"
        android:textSize="19sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/countOut"
        android:layout_width="341dp"
        android:layout_height="44dp"
        android:background="#F1EAE2"
        android:text="Число месяцев накопления депозита"
        android:textColor="#047083"
        android:textColorHint="#F3F4C25E"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="ЕЖЕМЕСЯЧНЫЕ НАЧИСЛЕНИЯ ЗА ВЕСЬ ПЕРИОД"
        android:textColor="#024F5C"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countOut"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/manyMonthOut"
        android:layout_width="347dp"
        android:layout_height="408dp"
        android:layout_marginTop="13dp"
        android:background="#F1EAE2"
        android:gravity="center"
        android:text="Ежемесячные платежи по депозиту"
        android:textColor="#047083"
        android:textColorHint="#F3F4C25E"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.014" />

</androidx.constraintlayout.widget.ConstraintLayout>